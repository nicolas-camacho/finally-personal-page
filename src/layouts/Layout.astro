	}

	nav {
		display: flex;
		align-items: center;
		padding: 1rem;
	}

	main {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.normal-text {
		font-family: var(--font-martian);
		margin: 5px;
	}

	.graphic-text {
		font-weight: bolder;
		font-family: var(--font-unbounded);
		margin: 5px;
		letter-spacing: 0.1rem;
	}

	.white-text {
		color: #ffffff;
	}
</style>

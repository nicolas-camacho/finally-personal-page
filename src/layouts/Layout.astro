---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/profilerender.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Martian+Mono:wght@200&family=Unbounded:wght@600&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<header>
		<nav>
			<a class="normal-text white-text" href="/">Home</a>
			<span class="normal-text white-text"> / </span>
			<a class="normal-text white-text" href="/about">About</a>
			<span class="normal-text white-text"> / </span>
			<a class="normal-text white-text" href="/projects">Projects</a>
		</nav>
	</header>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-one: #E26A58;
		--color-two: #EEC050;
		--color-three: #78C087;
		--color-four: #FBFBFC;
		--color-five: #1A120B;

		--font-martian: 'Martian Mono', monospace;
		--font-unbounded: 'Unbounded', cursive;
	}

	html {

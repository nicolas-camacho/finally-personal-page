---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={`Nicolas Camacho - ${frontmatter.title}`}>
  <main>
    <div class="container">
      <div class="image-container">
        <img src={frontmatter.image} />
      </div>
      <div class="content">
        <div>
          <h1 class="graphic-text title">{frontmatter.title}</h1>
          <h2 class="normal-text subtitle">{frontmatter.description}</h2>
        </div>
        <div class="mdx">
          <slot />
        </div>
      </div>
      <div class="footer">
        <a class="normal-text" href={frontmatter.link} target="_blank">
          <strong>
            Go to the project
          </strong>
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
		width: 100%;
		max-width: 900px;
		border: 25px solid var(--color-four);
		display: flex;
		flex-direction: column;
		background-color: var(--color-four);
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr 1fr;
    border-bottom: 2px dashed var(--color-five);
    padding-bottom: 2rem;
  }

  .title {
    font-size: 4rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .mdx {
    font-family: var(--font-martian);
  }

  .footer {
    margin-top: 1rem;
    display: flex;
    justify-content: flex-end;
  }

  .footer a {
    text-decoration: underline;
    color: #000000;
  }

  @media (max-width: 600px) {
    .content {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 3rem;
    }
  }
</style>